#! /bin/zsh

# just to make your day even more brighter
# stay safe and be happy :)

cyan=`tput setaf 6`
function compliments() 
{
   tally=$RANDOM
	range=5
	let "tally %= $range"
	if [ $tally -eq 0 ]
	then
		echo "$(tput setaf 6)You should be proud of yourself."
	elif [ $tally -eq 1 ]
	then
		echo "$(tput setaf 6)Your perspective is refreshing."
	elif [ $tally -eq 2 ]
	then
		echo "$(tput setaf 6)You're one of a kind."
	elif [ $tally -eq 3 ]
	then
		echo "$(tput setaf 6)You always make people smile."
	
	elif [ $tally -eq 4 ]
	then 
		echo "$(tput setaf 6)You are awesome"
	fi
}